<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mdclauncher.controller.MainController">

    <!-- 左边栏 -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2b2b2b;" prefWidth="150" alignment="TOP_CENTER">
            <Label text="MDCLauncher" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="主页" onAction="#showHome" prefWidth="120"/>
            <Button text="设置" onAction="#showSettings" prefWidth="120"/>
            <Button text="关于" onAction="#showAbout" prefWidth="120"/>
        </VBox>
    </left>

    <!-- 右边内容 -->
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
</BorderPane>